#!/bin/bash

BUILD_ARCH=${DOCKER_TAG}

if [[ $BUILD_ARCH == *"_"* ]]
then
    BUILD_ARCH=$(echo "$BUILD_ARCH" | cut -d_ -f2)
else
    BUILD_ARCH="amd64"
fi

[ "${BUILD_ARCH}" == "amd64" ] && 
{ echo 'qemu-user-static: Download not required for current arch'; exit 0; }

QEMU_USER_STATIC_ARCH=$([ "${BUILD_ARCH}" == "armhf" ] && echo "${BUILD_ARCH::-2}" || echo "aarch64")
QEMU_USER_STATIC_DOWNLOAD_URL="https://github.com/multiarch/qemu-user-static/releases/download"
QEMU_USER_STATIC_LATEST_TAG=$(curl -s https://api.github.com/repos/multiarch/qemu-user-static/tags | grep 'name.*v[0-9]' | head -n 1 | cut -d '"' -f 4)

curl -SL "${QEMU_USER_STATIC_DOWNLOAD_URL}/${QEMU_USER_STATIC_LATEST_TAG}/x86_64_qemu-${QEMU_USER_STATIC_ARCH}-static.tar.gz" | tar xzv